<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Modern Material Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="Product Details"
        app:titleTextColor="@color/white"
        app:navigationIconTint="@color/white"
        app:popupTheme="@style/ThemeOverlay.Material3.Light" />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product image inside MaterialCard for subtle elevation -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/coffee_default"/>

            </com.google.android.material.card.MaterialCardView>

            <!-- Product name -->
            <TextView
                android:id="@+id/tv_product_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/textPrimary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:importantForAccessibility="yes" />

            <!-- Product price -->
            <TextView
                android:id="@+id/tv_product_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="8dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/Terracotta" />

            <!-- Description header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="8dp" />

            <!-- Description text -->
            <TextView
                android:id="@+id/tv_product_description_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product description goes here."
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:lineSpacingExtra="4dp" />

            <!-- Add to cart button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Add to Cart"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_cart"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="@color/primary"
                app:iconTint="@color/white"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
